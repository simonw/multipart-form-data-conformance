{
  "id": "082-content-type-charset",
  "name": "Content-Type with charset",
  "description": "Content-Type header includes charset parameter",
  "spec_references": [
    "RFC 7578 Section 4.4"
  ],
  "category": "content-types",
  "tags": [
    "optional",
    "parsing"
  ],
  "expected": {
    "valid": true,
    "parts": [
      {
        "name": "text",
        "filename": "unicode.txt",
        "content_type": "text/plain; charset=utf-8",
