{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://github.com/multipart-conformance/schema/headers.schema.json",
  "title": "HTTP Headers",
  "description": "Schema for HTTP headers in test cases",
  "type": "object",
  "required": ["content-type"],
  "properties": {
    "content-type": {
      "type": "string",
      "pattern": "^multipart/form-data;\\s*boundary=",
      "description": "Content-Type header with boundary parameter"
    }
  },
  "additionalProperties": {
    "type": "string"
  }
}
